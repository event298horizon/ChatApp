<div class="grid-container">
    <section class="heading-text">
        <h1>A new way to connect with your favourite people</h1>
    </section>

    <section class="form-container">
        {{#if incorrectLogin}}
        <p style="color: #c53554" class="registered-msg">Invalid Email or password</p>
        {{/if}}
        {{#if notRegistered}}
        <p style="color: #c53554" class="registered-msg">Email not registered. Please Signup</p>
        {{/if}}
        <form action="/" method="post">
            <input type="email" name="email" class="email" placeholder="Email">
            <input type="password" placeholder="Password" name="password" class="password" />
            <a href="/" class="reset">Forgot Password ?</a>
            <button type="submit" id="login">Login</button>
        </form>
        <div class="or">
            <div class="divider">
                <span class="line">&nbsp;</span>
                <span>OR</span>
                <span class="line">&nbsp;</span>
            </div>
            <a href="./signup" id="signup">SignUp</a>
        </div>
    </section>
    <div class="img-container">
        <img src="./MainLogo.png" alt="" width='100%'>
    </div>
</div>