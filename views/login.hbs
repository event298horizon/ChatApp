<div class="grid-container">
    <section class="heading-text">
        <h1>A new way to connect with your favourite people</h1>
    </section>

    <section class="form-container">
        {{#if incorrectLogin}}
        <p style="color: #ff1010" class="registered-msg">Invalid Email or password</p>
        {{/if}}
        {{#if notRegistered}}
        <p style="color: #df1212" class="registered-msg">Email not registered. Please Signup</p>
        {{/if}}
        <form method="post">
            <input type="email" name="email" class="email" placeholder="Email" required>
            <input type="password" placeholder="Password" name="password" class="password" required>
            <a href="/" class="reset">Forgot Password ?</a>
            <button type="submit" id="login">Login</button>
        </form>
        
        <p style="font-size: 2rem; color: white; margin: 5rem 0 -8rem 0">Already have an account?&nbsp; <a href="./signup" style="font-size: 2rem; text-decoration: underline; color: rgb(20, 20, 228);">SignUp</a></p>
    </section>
    
</div>