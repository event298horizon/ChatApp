{{>nav}}
<div class="content-container">
      <div class="profile-container">
            <div class="top-left">
                  <div class="character">
                        <img src={{imgUrl}} width='100%' height="100%" class="userImg">
                  </div>
                  <div class="namebio">
                        <h1>{{name}} </h1>
                  </div>
            </div>
            <div class="user">
                  <div class="char-name">
                        <h3>Your Character: </h3>
                        <h1> {{userName}}</h1>
                  </div>
                  <div class="about card">
                        <h1> {{about}}</h1>
                  </div>
            </div>
      </div>
      <div class="card bio">
            <h1>{{bio}} </h1>
      </div>
      <div class="delete-btn">
            <a href='/login/delete' style='padding: .8rem 1rem; border:2px solid white; border-radius: 100px;'
                  class='delete-account'>Delete Account</a>
      </div>


</div>
{{>footer}}
<script>
      if (window.innerWidth > 900) {
            const windowHeight = window.innerHeight;
            const navHeight = document.querySelector('.nav').offsetHeight;
            const footerHeight = document.querySelector('.footer').offsetHeight;
            const profileContainer = document.querySelector('.content-container');
            const height = (windowHeight - navHeight - footerHeight) + 'px';
            profileContainer.style = `height: ${height}`;
      }

</script>